{
    "name": "logtalk",
	"displayName": "Logtalk",
	"description": "Logtalk language support for Visual Studio Code",
    "version": "0.0.1",
 	"publisher": "pmoura",
	"author": {
		"name": "Paulo Moura",
		"email": "pmoura@logtalk.org"
	},
	"contributors": [
		{
			"name": "Paulo Moura",
			"url": "https://github.com/pmoura"
		}
	],
    "engines": {
        "vscode": "^1.5.0"
    },
    "categories": [
        "Languages"
    ],
    "icon": "images/logtalk.png",
    "contributes": {
        "languages": [{
            "id": "logtalk",
            "aliases": ["Logtalk", "logtalk"],
            "extensions": [".lgt",".logtalk"],
            "configuration": "./language-configuration.json"
        }],
        "grammars": [{
            "language": "logtalk",
            "scopeName": "source.logtalk",
            "path": "./syntaxes/logtalk.tmLanguage"
        }],
		"snippets": [{
				"language": "logtalk",
				"path": "./snippets/snippets.json"
		}]
    }
}